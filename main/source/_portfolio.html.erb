<%
projects = [
	      {
	        title: "Nielsen Social",
	        short_description: "Twitter TV Analytics"
	      },
	      {
	        title: "Kluje",
  	        short_description: "Online marketplace for contractors"
	      },
	      {
	        title: "Voicemap",
	        short_description: "Tour guide in your smartphone"
	      },
	      {
                title: "Folr",
	        short_description: "Keep track of your employees"
              },
              {
                title: "MeetDrinks",
                short_description: "Social meet-up application",
              },
              {
                title: "SOML",
                short_description: "Story of My Life"
              }
]
projects.each{|project| project[:slug] = project[:title].parameterize.underscore}

%>



<section id="portfolio" class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Portfolio</h2>
        <h3 class="section-subheading text-muted">Projects I built and contributed to.</h3>
      </div>
    </div>
    <div class="row">
      <% projects.each_with_index do |project, i| %>
	<div class="col-md-4 col-sm-6 portfolio-item">
          <a href="#portfolioModal<%= i %>" class="portfolio-link" data-toggle="modal">
            <div class="portfolio-hover">
              <div class="portfolio-hover-content">
		<i class="fa fa-plus fa-3x"></i>
              </div>
            </div>
	    <%= image_tag "portfolio/#{project[:slug]}.png", class: "img-responsive", alt: "" %>
          </a>
          <div class="portfolio-caption">
            <h4><%= project[:title] %></h4>
            <p class="text-muted"><%= project[:short_description] %></p>
          </div>
	</div>
      <% end %>
    </div>
  </div>
</section>


<% projects.each_with_index do |project, i| %>
  <div class="portfolio-modal modal fade" id="portfolioModal<%= i %>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-content">
      <div class="close-modal" data-dismiss="modal">
        <div class="lr">
          <div class="rl">
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-lg-offset-2">
            <div class="modal-body">
              <h2><%= project[:title] %></h2>
              <p class="item-intro text-muted"><%= project[:short_description] %></p>
              <%= image_tag "portfolio/#{project[:slug]}.png", class: "img-responsive", alt: "" %>
              <p><%= project[:long_description] %></p>
              <p>
              <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-times"></i> Close Project</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
